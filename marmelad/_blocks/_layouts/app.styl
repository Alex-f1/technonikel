html, body
  margin: 0
  padding: 0

html, body
  min-height: 100vh

body
  &._is-scroll-lock
    overflow: hidden

  &.inner
    padding-top: 60px

    @media (min-width: 768px)
      padding-top: 66px

    @media (min-width: 1280px)
      padding-top: 140px

    .logo
      .logo-dark
        display: block !important

      .logo-light
        display: none !important

    .top-panel__inner
      @media (min-width: 768px) and (max-width: 1919px)
        padding-left: 50px

  &.error404
    .logo
      .logo-dark
        display: none !important

      .logo-light
        display: block !important

    .top-panel
      &__info
        display: none

.app
  display: grid
  grid-template-rows: auto 1fr auto

.contain
  max-width: 1626px
  width: 100%
  margin-right: auto
  margin-left: auto
  padding-right: 20px
  padding-left: 20px

  @media (min-width: 768px)
    max-width: 1626px + 50px + 50px
    padding-right: 50px
    padding-left: 50px

.button-default
  font-size: 10px
  color: #FFF
  font-weight: 700
  line-height: 1.143
  letter-spacing: 0.8px
  text-align: center
  text-transform: uppercase
  text-decoration: none
  background-color: #4FA600
  border: none
  border-radius: 10px
  min-width: 180px
  padding: 12px 26px
  display: flex
  align-items: center
  justify-content: center
  flex: none
  cursor: pointer
  transition: background-color 0.3s, border-color 0.3s, color 0.3s

  @media (min-width: 1280px)
    font-size: 14px
    padding-top: 18px
    padding-bottom: 18px

  @media (min-width: 1600px)
    font-size: 16px

  svg
    margin-right: 8px

    path
      transition: stroke 0.3s, fill 0.3s

  &:hover
    background-color: #89C900

  &--outline
    color: #000
    border: 1px solid #000000
    background-color: transparent

    &:hover
      color: #fff
      background-color: #4FA600
      border-color: #4FA600

.inner-top
  h1
    font-size: 36px
    color: #000
    font-weight: 700
    line-height: 1.3
    text-transform: uppercase
    margin-top: 0

    @media (min-width: 768px)
      font-size: 50px

    @media (min-width: 1280px)
      font-size: 80px

  &--pic
    height: 400px

    @media (min-width: 768px)
      height: 468px

    @media (min-width: 960px)
      height: 600px

    @media (min-width: 1280px)
      height: 800px

    .bread-crumbs
      background-color: #4FA600
      border-radius: 5px
      display: inline-flex
      padding: 4px 10px

      *
        color: #fff

    h1
      background-color: #fff
      padding: 0 25px
      margin-bottom: 0
      max-width: max-content

    p
      font-size: 18px
      color: #FFF
      font-weight: 300
      line-height: 1.1
      letter-spacing: 0.8px
      text-transform: uppercase
      background: #4FA600
      backdrop-filter: blur(10px)
      margin: 0
      padding: 5px 31px
      max-width: max-content

      @media (min-width: 1280px)
        font-size: 24px

    & ^[0]
      &__section
        height: 100%
        background-repeat: no-repeat
        background-position: 0 0
        background-size: cover
        display: flex
        flex-direction: column

      &__inner
        margin-top: auto
        padding-bottom: 50px

        @media (min-width: 1280px)
          padding-bottom: 100px


.video-block
  padding-top: 20px
  padding-bottom: 80px

  @media (max-width: 767px)
    padding-bottom: 40px

  &__section
    max-width: 1400px
    width: 100%
    height: 768px
    margin: 0 auto

    @media (max-width: 1599px)
      padding-right: 50px
      padding-left: 50px

    @media (max-width: 1279px)
      height: 450px

    @media (max-width: 767px)
      padding-right: 25px
      padding-left: 25px
      height: 350px

    @media (max-width: 479px)
      height: 190px

    iframe
      width: 100%
      height: 100%
      object-fit: cover

.info-text
  padding-top: 20px
  padding-bottom: 50px

  @media (min-width: 768px)
    padding-top: 30px
    padding-bottom: 70px

  @media (min-width: 768px)
    padding-top: 40px
    padding-bottom: 100px

  &__info
    color: #000
    margin-bottom: 50px

    @media (min-width: 768px)
      margin-bottom: 80px

    @media (min-width: 1280px)
      margin-bottom: 120px

    h3
      font-size: 30px
      font-weight: 700
      line-height: 1.1
      letter-spacing: 0.8px
      text-transform: uppercase
      margin-top: 0
      margin-bottom: 25px

    p
      font-size: 16px
      font-weight: 300
      line-height: 1.5
      letter-spacing: 0.8px
      margin-top: 0
      margin-bottom: 20px

      a
        color: #4fa600
        text-decoration: none

        &:hover
          text-decoration: underline

  &__text
    p
      font-size: 26px
      font-weight: 300
      line-height: 78px
      color: #000
      margin-top: 0
      margin-bottom: 25px

      @media (min-width: 768px)
        font-size: 40px

      @media (min-width: 768px)
        font-size: 60px

      &:last-child
        margin-bottom: 0
