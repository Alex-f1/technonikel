html, body
  margin: 0
  padding: 0

html, body
  min-height: 100vh

.app
  display: grid
  grid-template-rows: auto 1fr auto

.contain
  max-width: 1626px
  width: 100%
  margin-right: auto
  margin-left: auto
  padding-right: 20px
  padding-left: 20px

  @media (min-width: 768px)
    max-width: 1626px + 50px + 50px
    padding-right: 50px
    padding-left: 50px

.button-default
  font-size: 14px
  color: #FFF
  font-weight: 700
  line-height: 1.143
  letter-spacing: 0.8px
  text-align: center
  text-transform: uppercase
  text-decoration: none
  background-color: #4FA600
  border: none
  border-radius: 10px
  min-width: 180px
  padding: 12px 26px
  display: flex
  align-items: center
  justify-content: center
  flex: none
  // transition: border-color 0.3s, ease 0.3s

  svg
    margin-right: 8px