.about-tree
  padding-top: 44px
  padding-bottom: 28px

  @media (min-width: 768px)
    padding-top: 40px
    padding-bottom: 20px

  @media (min-width: 1280px)
    padding-top: 85px
    padding-bottom: 70px

  &__inner
    @media (min-width: 768px)
      padding-right: 0 !important

  &__head
    margin-bottom: 35px

    @media (min-width: 768px)
      margin-bottom: 45px

    @media (min-width: 1280px)
      margin-bottom: 55px

  &__title
    font-size: 36px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 8px

    @media (min-width: 768px)
      font-size: 50px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 10px

  &__desc
    font-size: 18px
    font-weight: 300
    line-height: 1.4
    margin-bottom: 32px
    max-width: 180px

    @media (min-width: 768px)
      font-size: 20px
      max-width: 100%

    @media (min-width: 1280px)
      font-size: 24px

  &__wrapper
    @media (min-width: 1600px)
      padding-left: 80px

  &__container
    padding-bottom: 40px

    @media (min-width: 768px)
      padding-bottom: 50px

    .swiper-pagination
      display: flex
      align-items: center

      @media (min-width: 768px)
        display: none

      .swiper-pagination-bullet
        flex: 1 1 auto
        opacity: 1
        border-radius: 0
        height: 10px
        margin-right: 5px
        margin-left: 5px
        display: flex
        align-items: center
        justify-content: center
        background-color: transparent

        &:before
          content: ''
          height: 2px
          width: 100%
          background-color: #E2E2E2
          transition: background-color 0.3s

        &.swiper-pagination-bullet-active
          &:before
            background-color: #4fa600

    .swiper-scrollbar
      bottom: 30px

      @media (max-width: 767px)
        display: none

  &__items
    display: flex

  &__item
    @media (min-width: 768px)
      flex: 0 0 260px + 25px
      width: 260px + 25px
      max-width: 260px + 25px
      // padding-left: 25px

.about-tree-card
  width: 100%
  height: 400px
  display: flex

  &__body
    width: 100%
    height: 400px
    overflow: hidden
    background-color: #F1F1F1
    border-radius: 30px
    display: flex
    flex-direction: column
    position: relative
    transition: height 0.5s

    @media (min-width: 768px)
      height: 320px

    &:hover
      height: 400px

      & ^[0]
        &__link-more
          margin-bottom: 0

    &:after
      content: ''
      width: 100%
      height: 100%
      position: absolute
      bottom: 0
      left: 0
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0) 96%)

  &__img
    width: 100%
    height: 100%
    position: absolute

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top

  &__content
    color: #FFF
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    margin-top: auto
    padding: 20px
    position: relative
    z-index: 2

    small
      font-weight: 300
      font-size: 12px
      line-height: 1.2
      text-align: center
      letter-spacing: 0.05em
      margin-bottom: 5px

  &__name
    font-size: 16px
    font-weight: 700
    line-height: 1.2
    margin-bottom: 36px
    max-width: 210px

  &__link-more
    font-size: 12px !important
    min-width: 120px !important
    padding-top: 13px !important
    padding-bottom: 14px !important
    transition: margin-bottom 0.7s

    @media (min-width: 768px)
      margin-bottom: -75px