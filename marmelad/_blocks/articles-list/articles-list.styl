.articles-list
  padding-bottom: 50px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

    @media (min-width: 1280px)
      margin-left: -60px

  &__item
    width: 100%
    padding-left: 30px
    margin-bottom: 45px
    display: flex

    @media (min-width: 768px)
      width: 50%

    @media (min-width: 1280px)
      width: 33.333%
      padding-left: 60px
      margin-bottom: 95px

.article-thumb
  display: flex

  &__body
    width: 100%
    display: flex
    flex-direction: column

  &__top
    flex: 1 1 auto
    margin-bottom: 20px

  &__img
    background-color: #F1F1F1
    border-radius: 30px
    text-decoration: none
    height: 300px
    overflow: hidden
    margin-bottom: 20px
    display: block

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__name
    font-size: 18px
    color: #000
    font-weight: 700
    line-height: 1.2
    text-decoration: none
    transition: color 0.3s
    display: block

    @media (min-width: 1280px)
      font-size: 24px

    &:hover
      color: #4FA600

  &__text
    font-size: 16px
    color: #000
    font-weight: 300
    line-height: 1.2

    @media (min-width: 768px)
      min-height: 108px

    @media (min-width: 1280px)
      font-size: 18px