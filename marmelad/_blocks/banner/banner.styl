.banner
  // padding-top: 50px
  padding-bottom: 30px
  max-width: 1920px
  width: 100%
  margin: 0 auto

  @media (min-width: 768px)
    // padding-top: 42px
    padding-bottom: 20px

  @media (min-width: 1280px)
    // padding-top: 100px
    padding-bottom: 50px

  &__section
    width: 100%
    height: 324px
    background-position: 0 0
    background-size: cover
    background-repeat: no-repeat
    position: relative

    @media (min-width: 768px)
      height: 480px

    @media (min-width: 1280px)
      height: 600px

    &:after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.6) 51.04%, rgba(0, 0, 0, 0.2) 96.58%)

  &__inner
    height: 100%
    display: flex
    flex-direction: column
    justify-content: center

  &__content
    color: #FFF
    position: relative
    z-index: 2
    display: flex
    flex-direction: column
    align-items: center
    text-align: center

  &__title
    font-weight: 300
    font-size: 30px
    line-height: 1
    text-transform: uppercase
    margin-bottom: 12px

    @media (min-width: 768px)
      font-size: 50px
      letter-spacing: 3px
      margin-bottom: 22px

    @media (min-width: 1280px)
      max-width: 840px
      width: 100%
      font-size: 70px
      letter-spacing: 5px

  &__desc
    font-size: 16px
    font-weight: 300
    line-height: 1.3

    @media (min-width: 768px)
      font-size: 24px

  &__img
    position: absolute
    width: 260px
    bottom: -210px
    left: 50%
    transform: translateX(-50%)

    @media (min-width: 768px)
      width: 362px
      bottom: -300px

    @media (min-width: 1280px)
      width: 480px
      bottom: -380px

    img
      vertical-align: top
