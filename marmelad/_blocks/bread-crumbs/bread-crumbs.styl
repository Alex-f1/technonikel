.bread-crumbs
  font-size: 11px
  color: #000
  font-weight: 300
  line-height: 1.1
  letter-spacing: 0.8px
  flex: none
  margin-bottom: 15px
  display: flex
  align-items: center
  flex-wrap: wrap

  @media (min-width: 768px)
    font-size: 12px
    margin-bottom: 35px

  @media (min-width: 1280px)
    font-size: 14px
    margin-bottom: 18px

  a
    text-decoration: none
    color: #000

    &:hover
      text-decoration: underline

  &__separator
    color: #000
    margin-left: 0
    padding-left 5px
    padding-right 5px
    text-align: center