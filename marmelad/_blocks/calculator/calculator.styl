.calculator
  padding-top: 44px
  padding-bottom: 100px
  background-repeat: no-repeat
  position: relative
  max-width: 1920px
  width: 100%
  margin: 0 auto

  &:before
    content: ''
    position: absolute
    bottom: -200px
    left: -300px
    width: 410px
    height: 410px
    background-image: url('../img/bg-pic.png')
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain

    @media (max-width: 767px)
      display: none

    @media (min-width: 1280px)
      bottom: -150px
      left: -320px
      width: 700px
      height: 700px

  @media (min-width: 768px)
    padding-top: 42px

  @media (min-width: 1280px)
    padding-top: 80px
    padding-bottom: 200px
    background-size: auto
    background-position: -590px 415px

  &__title
    font-size: 36px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 22px

    @media (min-width: 768px)
      font-size: 50px
      margin-bottom: 18px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 32px

  &__info
    color: #000
    margin-bottom: 45px
    display: flex
    flex-direction: column

    @media (max-width: 767px)
      padding-right: 25px

    @media (min-width: 768px)
      justify-content: space-between
      align-items: flex-end
      flex-direction: row

    @media (min-width: 960px)
      margin-bottom: 94px

  &__text
    font-size: 18px
    font-weight: 300
    line-height: 1.2
    margin-bottom: 40px
    order: -1

    @media (min-width: 768px)
      font-size: 20px
      order: 1
      margin-bottom: 0
      margin-left: 30px
      width: 310px

    @media (min-width: 1280px)
      width: 650px
      font-size: 40px

  &__step
    font-size: 18px
    display: flex
    align-items: center
    flex: 0 0 auto

    @media (min-width: 960px)
      font-size: 24px

    strong
      font-weight: 700
      line-height: 1.1
      margin-right: 18px

    span
      font-weight: 300
      line-height: 1.1

  &__wrapper
    max-width: 1626px
    width: 100%
    margin: 0 auto
    position: relative
    z-index: 5

    @media (max-width: 767px)
      overflow: hidden

  &__container
    // padding-right 33px
    // padding-left 33px
    max-width: 1626px
    width: 100%
    margin: 0 auto
    padding-bottom: 40px
    overflow: visible

    @media (min-width: 768px)
      padding-bottom: 50px

    .swiper-pagination
      display: flex
      align-items: center

      @media (min-width: 768px)
        display: none

      .swiper-pagination-bullet
        flex: 1 1 auto
        opacity: 1
        border-radius: 0
        height: 10px
        margin-right: 5px
        margin-left: 5px
        display: flex
        align-items: center
        justify-content: center
        background-color: transparent

        &:before
          content: ''
          height: 2px
          width: 100%
          background-color: #E2E2E2
          transition: background-color 0.3s

        &.swiper-pagination-bullet-active
          &:before
            background-color: #4fa600

    .swiper-scrollbar
      bottom: 30px

      @media (max-width: 767px)
        display: none

  &__items
    display: flex
    // margin-left: -14px

  &__item
    // padding-left: 14px
    @media (max-width: 767px)
      /* flex: 0 0 280px + 14px
      width: 280px + 14px
      max-width: 280px + 14px */
      /* flex: 0 0 280px
      width: 280px
      max-width: 280px */

    @media (min-width: 768px)
      width: 23.5%

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    margin-top: 14px
    padding-bottom: 30px
    border-bottom: 1px solid #E2E2E2

    // @media (max-width: 767px)
    // padding-right: 25px
    @media (min-width: 768px)
      flex-direction: row
      align-items: flex-end
      justify-content: flex-end
      margin-top: 10px

    @media (min-width: 1280px)
      margin-top: 25px
      padding-bottom: 75px

  &__current-step
    font-size: 18px
    color: #000
    font-weight: 300
    line-height: 1.2
    letter-spacing: 0.8px
    display: flex
    align-items: center
    margin-left: auto
    margin-right: auto

    @media (min-width: 768px)
      transform: translateX(80px)

    strong
      font-weight: 700

    @media (min-width: 1280px)
      font-size: 20px

  &__button
    @media (max-width: 767px)
      margin-top: 30px

    &--prev
      span
        &:after
          transform: rotate(180deg)
          top: 1px
          right: 0
          left: -20px

      ~ .calculator__current-step
        @media (min-width: 768px)
          transform: translateX(0)

    &.button-default
      font-size: 14px
      padding-top: 16px
      padding-bottom: 16px

      @media (max-width: 480px)
        min-width: auto
        max-width: 100%
        width: 100%

      @media (min-width: 768px)
        min-width: 160px

    span
      position: relative

      &:after
        content: ''
        position: absolute
        top: 2px
        right: -20px
        width: 8px
        height: 13px
        background-image: url("data:image/svg+xml,%3Csvg width='8' height='13' viewBox='0 0 8 13' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 11.3496L6 6.32219L1 1.29476' stroke='white' stroke-width='2'/%3E%3C/svg%3E%0A")

  &__item
    &._is-active
      .calculator-product-card
        &__body
          background-color: #FFF
          box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2)

          &:after
            opacity: 1
            visibility: visible

        &__name
          color: #4fa600

.calculator-product-card
  display: flex
  cursor: pointer
  height: 400px

  @media (min-width: 768px) and (max-width: 1279px)
    height: 260px

  @media (min-width: 1280px)
    height: 420px

  &:hover
    & ^[0]
      &__body
        @media (min-width: 1025px)
          background-color: #FFF
          box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2)

      &__name
        color: #4fa600

  &__body
    width: 100%
    height: 100%
    background-color: #F1F1F1
    border-radius: 20px
    overflow: hidden
    position: relative
    display: flex
    flex-direction: column
    transition: box-shadow 0.3s, background-color 0.3s

    @media (min-width: 1280px)
      border-radius: 30px

    &:after
      content: ''
      position: absolute
      top: 20px
      right: 20px
      width: 40px
      height: 40px
      background-image: url("data:image/svg+xml,%3Csvg width='61' height='61' viewBox='0 0 61 61' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='30.8379' cy='30.8223' r='30' fill='%234FA600'/%3E%3Cpath d='M16.831 30.1045L28.0639 41.3374L46.2347 23.1667' stroke='white' stroke-width='2'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      opacity: 0
      visibility: hidden
      transition: opacity 0.3s, ease 0.3s

      @media (min-width: 1280px)
        width: 61px
        height: 61px

  &__img
    // width: 100%
    // height: 100%
    position: absolute
    top: 0
    right: 0

    @media (min-width: 480px) and (max-width: 767px)
      right: -25px
      top: 30px

    @media (min-width: 768px) and (max-width: 959px)
      right: -50px
      top: 10px

    img
      vertical-align: top

  &__content
    color: #000
    margin-top: auto
    padding: 28px 15px
    position: relative
    z-index: 2
    display: flex
    flex-direction: column
    justify-content: center
    text-align: center

    @media (min-width: 1280px)
      padding: 35px

    span
      font-size: 12px
      font-weight: 300
      line-height: 1.1
      letter-spacing: 0.8px

  &__name
    font-size: 20px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    transition: color 0.3s

    @media (min-width: 768px)
      font-size: 16px

    br
      @media (min-width: 1280px)
        display: none