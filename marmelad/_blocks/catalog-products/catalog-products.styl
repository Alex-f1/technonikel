.catalog-products
  padding-top: 20px
  padding-bottom: 30px

  @media (min-width: 768px)
    padding-top: 30px
    padding-bottom: 20px

  @media (min-width: 1280px)
    padding-top: 80px
    padding-bottom: 100px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -20px

    @media (min-width: 1280px)
      margin-left: -32px

  &__item
    width: 100%
    margin-bottom: 20px
    padding-left: 20px

    @media (min-width: 768px)
      width: 33.333%
      margin-bottom: 60px

    @media (min-width: 1280px)
      width: 25%
      padding-left: 32px
      margin-bottom: 100px

.product-thumb
  width: 100%
  height: 320px
  display: flex
  text-decoration: none

  @media (min-width: 1280px)
    height: 420px

  &:hover
    & ^[0]
      &__name
        color: #4fa600

  &__body
    width: 100%
    display: flex
    flex-direction: column
    position: relative
    background-color: #F1F1F1
    border-radius: 20px
    overflow: hidden

    @media (min-width: 1280px)
      border-radius: 30px

  &__img
    position: absolute
    top: 0
    right: 0

    img
      vertical-align: top

  &__icons
    position: absolute
    top: 0
    left: 0
    padding: 20px
    display: flex
    align-items: center

  &__icon
    flex: 0 0 45px
    width: 45px
    max-width: 45px
    height: 45px
    background-color: #FFFFFF
    border-radius: 10px
    display: flex
    justify-content: center
    align-items: center
    margin-right: 4px

    &:last-child
      margin-right: 0

    img
      vertical-align: top

  &__name
    font-size: 16px
    color: #000
    font-weight: 700
    line-height: 1.1
    text-align: center
    text-transform: uppercase
    position: absolute
    bottom: 40px
    left: 50%
    transform: translateX(-50%)
    transition: color 0.3s
    width: 100%
    padding-right: 30px
    padding-left: 30px

    @media (min-width: 1280px)
      bottom: 35px