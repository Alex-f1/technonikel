.catalog-products
  padding-top: 20px
  padding-bottom: 30px

  @media (min-width: 768px)
    padding-top: 30px
    padding-bottom: 20px

  @media (min-width: 1280px)
    padding-top: 80px
    padding-bottom: 100px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -20px

    @media (min-width: 1280px)
      margin-left: -32px

  &__item
    width: 100%
    margin-bottom: 20px
    padding-left: 20px

    @media (min-width: 768px)
      width: 33.333%
      margin-bottom: 60px

    @media (min-width: 1280px)
      width: 25%
      padding-left: 32px
      margin-bottom: 50px

.product-thumb
  width: 100%
  display: flex
  text-decoration: none

  @media (min-width: 1025px)
    height: 480px

  &__body
    width: 100%
    height: 320px
    display: flex
    flex-direction: column
    position: relative
    background-color: #F1F1F1
    border-radius: 20px
    overflow: hidden
    transition: box-shadow 0.5s, background-color 0.5s, height 0.5s

    @media (min-width: 1025px)
      border-radius: 30px
      height: 420px

    &:hover
      @media (min-width: 1025px)
        height: 500px
        box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2)
        background-color: #FFF

      & ^[0]
        &__icon
          @media (min-width: 1025px)
            background-color: #F1F1F1

        &__button-more
          margin-bottom: 0

  &__img
    position: absolute
    top: 0
    right: 0

    img
      vertical-align: top

  &__icons
    position: absolute
    top: 0
    left: 0
    padding: 20px
    display: flex
    align-items: center

  &__icon
    flex: 0 0 45px
    width: 45px
    max-width: 45px
    height: 45px
    background-color: #FFF
    border-radius: 10px
    display: flex
    justify-content: center
    align-items: center
    margin-right: 4px
    transition: background-color 0.5s

    &:last-child
      margin-right: 0

    img
      vertical-align: top

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    margin-top: auto
    padding: 20px 50px
    position: relative
    z-index: 2

    @media (min-width: 768px)
      padding-bottom: 20px

    @media (min-width: 1025px)
      padding-bottom: 40px

  &__name
    font-size: 16px
    color: #000
    font-weight: 700
    line-height: 1.1
    text-align: center
    text-transform: uppercase
    margin-bottom: 15px
    transition: color 0.3s
    width: 100%

    @media (min-width: 1025px)
      margin-bottom: 30px

  &__button-more
    transition: margin-bottom 0.5s

    @media (min-width: 1025px)
      margin-bottom: -80px

    &.button-default
      font-size: 10px !important
      padding-top: 14px !important
      padding-bottom: 14px !important
      width: 140px
      min-width: 140px !important