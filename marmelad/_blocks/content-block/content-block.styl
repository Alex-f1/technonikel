.content-block
  padding-top: 20px
  padding-bottom: 100px

  &__container
    @media (min-width: 1024px)
      display: flex
      position: relative

  &__sidebar
    background-color: #F1F1F1
    border-radius: 20px
    padding: 24px 30px
    top: 25px
    align-self: flex-start
    margin-bottom: 30px

    @media (min-width: 1024px)
      margin-right: 30px
      margin-bottom: 0
      flex: 0 0 360px
      width: 360px
      max-width: 360px

    @media (min-width: 1440px)
      margin-right: 60px

    @media (min-height: 700px)
      position: sticky

    h3
      font-size: 20px
      color: #000
      font-weight: 700
      line-height: 1.2
      margin-top: 0
      margin-bottom: 20px

    ul
      list-style: none
      padding-left: 0
      margin: 0

      li
        margin-bottom: 15px

        a
          font-size: 16px
          color: #000
          font-weight: 300
          line-height: 1.1
          text-decoration: none
          display: block

          &:hover
            color: #4fa600

  &__content
    br
      @media (max-width: 1023px)
        display: none

    h1
      font-size: 24px
      font-weight: 700
      line-height: 1
      color: #000
      margin-top: 0
      margin-bottom: 25px

      @media (min-width: 768px)
        font-size: 32px

      @media (min-width: 960px)
        font-size: 44px
        margin-right: 50px

      @media (min-width: 1280px)
        font-size: 60px
        margin-bottom: 70px

      @media (min-width: 1600px)
        font-size: 80px

    h2
      font-size: 30px
      color: #000
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 25px

      @media (min-width: 1280px)
        font-size: 40px

      @media (min-width: 1600px)
        font-size: 60px
        margin-bottom: 55px

    h3
      font-size: 24px
      color: #000
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 35px

      @media (min-width: 1280px)
        font-size: 30px

      @media (min-width: 1600px)
        font-size: 40px

    p
      font-size: 20px
      color: #000
      font-weight: 300
      line-height: 1.3
      letter-spacing: 0.8px
      margin-top: 0
      margin-bottom: 25px

      @media (max-width: 767px)
        font-size: 16px
        margin-bottom: 15px

      br
        display: block

      &:has(strong)
        margin-bottom: 5px

      strong
        margin-bottom: 0

      &.text-accent
        font-size: 36px
        margin-bottom: 55px

        @media (max-width: 767px)
          font-size: 22px
          margin-bottom: 25px

      a
        color: #4fa600
        text-decoration: none

        &:hover
          text-decoration: underline

    strong
      font-size: 20px
      color: #000
      font-weight: 700
      line-height: 1.1
      letter-spacing: 0.8px
      margin-bottom: 28px
      display: block

    .button-default
      font-size: 16px !important
      display: inline-flex !important
      padding-right: 45px !important
      padding-left: 45px !important
      padding-top: 16px !important
      padding-bottom: 16px !important
      margin-bottom: 65px

      @media (max-width: 767px)
        font-size: 14px !important
        padding-right: 20px !important
        padding-left: 20px !important

      &:after
        content: ''
        flex: 0 0 8px
        width: 8px
        max-width: 8px
        height: 12px
        background-image: url("data:image/svg+xml,%3Csvg width='8' height='12' viewBox='0 0 8 12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 11.1523L6 6.12492L1 1.0975' stroke='white' stroke-width='2'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain
        margin-left: 10px

  &__main
    margin-bottom: 30px

    @media (min-width: 1280px)
      margin-bottom: 60px

    @media (min-width: 1600px)
      margin-bottom: 120px

  &__img-full
    background-color: #F1F1F1
    border-radius: 30px
    overflow: hidden
    margin-bottom: 60px
    height: 420px

    @media (max-width: 767px)
      height: 300px
      border-radius: 20px
      margin-bottom: 30px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__img
    max-width: 760px
    margin: 0 0 40px 0

    div
      background-color: #F1F1F1
      border-radius: 30px
      height: 420px
      overflow: hidden

      @media (max-width: 767px)
        height: 300px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

    figcaption
      font-weight: 300
      font-size: 16px
      line-height: 1.1
      text-align: center
      letter-spacing: 0.8px
      color: #000000
      margin-top: 10px

      a
        color: #4fa600
        text-decoration: none
        font-weight: 500

        &:hover
          text-decoration: underline

  &__info-img
    @media (min-width: 768px)
      display: flex

  &__info-text
    margin-left: 25px
    margin-bottom: 25px

    @media (min-width: 1024px)
      margin-left: 50px
      margin-bottom: 0

    @media (min-width: 1600px)
      margin-left: 100px

  &__imgs
    display: flex
    flex-wrap: wrap
    margin-left: -40px
    margin-bottom: 30px

    @media (max-width: 959px)
      margin-left: -20px

    strong
      width: 100%
      padding-left: 40px
      margin-bottom: 20px

    & ^[0]
      &__img
        width: 50%
        padding-left: 40px

        @media (max-width: 959px)
          padding-left: 20px

        @media (max-width: 767px)
          width: 100%

  &__full
    h2
      margin-bottom: 20px

    p
      a
        font-weight: 500

    & ^[0]
      &__img
        max-width: 100%

        div
          height: 660px

          @media (max-width: 767px)
            height: 320px
