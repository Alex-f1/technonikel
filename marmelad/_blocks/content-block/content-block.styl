.content-block
  padding-top: 20px
  padding-bottom: 100px

  &__container
    @media (min-width: 1024px)
      display: flex
      position: relative

  &__sidebar
    background-color: #F1F1F1
    border-radius: 20px
    padding: 24px 0
    top: 25px
    align-self: flex-start
    margin-bottom: 30px

    @media (min-width: 1024px)
      margin-right: 30px
      margin-bottom: 0
      flex: 0 0 360px
      width: 360px
      max-width: 360px

    @media (min-width: 1440px)
      margin-right: 60px

    @media (min-height: 700px)
      position: sticky

    @media (max-width: 1023px)
      position: sticky
      height: 68px
      top: 15px
      overflow: hidden
      cursor: pointer

    &._is-show
      height: 350px

      & ^[0]
        &__nav
          padding-bottom: 50px

    h3
      font-size: 20px
      color: #000
      font-weight: 700
      line-height: 1.2
      margin-top: 0
      margin-bottom: 20px
      padding-left: 30px

      &:after
        content: ':'

        @media (max-width: 1023px)
          display: none

    ul
      list-style: none
      padding-left: 0
      margin: 0

      li
        margin-bottom: 15px
        position: relative
        padding-right: 30px
        padding-left: 30px

        a
          font-size: 16px
          color: #000
          font-weight: 300
          line-height: 1.1
          text-decoration: none
          display: block

          &:hover
            color: #4fa600

        .sub-menu-trigger
          position: absolute
          top: 0
          left: 10px
          width: 5px
          height: 5px
          cursor: pointer

          &:before
            content: '+'
            font-size: 16px
            color: #000
            font-weight: 300
            line-height: 0.8
            display: block

        &._is-active
          > ul
            display: block

          > .sub-menu-trigger
            &:before
              content: 'â€“'

        ul
          padding-top: 15px
          display: none

          li
            padding-left: 25px

  &__nav
    overflow-y: auto
    height: 100%

  &__content
    br
      @media (max-width: 1023px)
        display: none

    h1
      font-size: 24px
      font-weight: 700
      line-height: 1
      color: #000
      margin-top: 0
      margin-bottom: 25px

      @media (min-width: 768px)
        font-size: 32px

      @media (min-width: 960px)
        font-size: 44px

      @media (min-width: 1280px)
        font-size: 60px
        margin-bottom: 55px

      @media (min-width: 1600px)
        font-size: 80px

    h2
      font-size: 30px
      color: #000
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 25px

      @media (min-width: 1280px)
        font-size: 40px

      @media (min-width: 1600px)
        font-size: 60px
        margin-bottom: 55px

    h3
      font-size: 24px
      color: #000
      font-weight: 700
      line-height: 1.1
      margin-top: 0
      margin-bottom: 35px

      @media (min-width: 1280px)
        font-size: 30px

      @media (min-width: 1600px)
        font-size: 40px

    h4
      font-size: 24px
      color: #000
      font-weight: 700
      line-height: 1.2
      margin-top: 0
      margin-bottom: 15px

    p
      font-size: 20px
      color: #000
      font-weight: 300
      line-height: 1.3
      letter-spacing: 0.8px
      margin-top: 0
      margin-bottom: 25px

      @media (max-width: 767px)
        font-size: 16px
        margin-bottom: 15px

      br
        display: block

      &:has(strong)
        margin-bottom: 5px

      strong
        margin-bottom: 0
        display: inline-block

      &.text-accent
        font-size: 36px
        margin-bottom: 70px

        @media (max-width: 767px)
          font-size: 22px
          margin-bottom: 40px

      a
        color: #4fa600
        text-decoration: none

        &:hover
          text-decoration: underline

    strong
      font-size: 20px
      color: #000
      font-weight: 700
      line-height: 1.1
      letter-spacing: 0.8px
      margin-bottom: 28px
      display: block

      &.text-break
        line-break: anywhere

    .button-default
      font-size: 16px !important
      display: inline-flex !important
      padding-right: 45px !important
      padding-left: 45px !important
      padding-top: 16px !important
      padding-bottom: 16px !important
      margin-bottom: 65px

      @media (max-width: 767px)
        font-size: 14px !important
        padding-right: 20px !important
        padding-left: 20px !important

      &:after
        content: ''
        flex: 0 0 8px
        width: 8px
        max-width: 8px
        height: 12px
        background-image: url("data:image/svg+xml,%3Csvg width='8' height='12' viewBox='0 0 8 12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 11.1523L6 6.12492L1 1.0975' stroke='white' stroke-width='2'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain
        margin-left: 10px

  &__main
    margin-bottom: 30px

    @media (min-width: 1280px)
      margin-bottom: 60px

    @media (min-width: 1600px)
      margin-bottom: 120px

  &__img-full
    background-color: #F1F1F1
    border-radius: 30px
    overflow: hidden
    margin-bottom: 60px
    height: 420px

    @media (max-width: 767px)
      height: 300px
      border-radius: 20px
      margin-bottom: 30px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

  &__img
    max-width: 760px
    margin: 0 0 40px 0

    div
      background-color: #F1F1F1
      border-radius: 30px
      height: 420px
      overflow: hidden

      @media (max-width: 767px)
        height: 300px

    img
      vertical-align: top
      width: 100%
      height: 100%
      object-fit: cover

    figcaption
      font-weight: 300
      font-size: 16px
      line-height: 1.1
      text-align: center
      letter-spacing: 0.8px
      color: #000000
      margin-top: 10px

      a
        color: #4fa600
        text-decoration: none
        font-weight: 500

        &:hover
          text-decoration: underline

  &__info-img
    @media (min-width: 768px)
      display: flex

  &__info-text
    margin-left: 25px
    margin-bottom: 25px

    @media (min-width: 1024px)
      margin-left: 50px
      margin-bottom: 0

    @media (min-width: 1600px)
      margin-left: 100px

  &__imgs
    display: flex
    flex-wrap: wrap
    margin-left: -40px
    margin-bottom: 30px

    @media (max-width: 959px)
      margin-left: -20px

    strong
      width: 100%
      padding-left: 40px
      margin-bottom: 20px

    & ^[0]
      &__img
        width: 50%
        padding-left: 40px

        @media (max-width: 959px)
          padding-left: 20px

        @media (max-width: 767px)
          width: 100%

  &__full
    h2
      margin-bottom: 20px

    p
      a
        font-weight: 500

    & ^[0]
      &__img
        max-width: 100%

        div
          height: 660px

          @media (max-width: 767px)
            height: 320px

  &__percentage-info
    max-width: 450px
    margin-bottom: 30px

    p
      display: flex
      align-items: center
      margin-bottom: 15px !important

      strong
        margin-left: auto
        padding-left: 20px
        flex: 0 0 auto

        @media (max-width: 767px)
          font-size: 16px

  &__percentage-table, &__bordered-table
    margin-top: 20px
    margin-bottom: 20px

    @media (max-width: 767px)
      overflow-x: auto

    table
      width: 100%
      font-size: 14px

      @media (min-width: 768px)
        font-size: 16px

      @media (min-width: 1280px)
        font-size: 20px

      tr
        td
          padding-bottom: 15px

      strong
        margin-bottom: 0
        font-size: 14px

        @media (min-width: 768px)
          font-size: 16px

        @media (min-width: 1280px)
          font-size: 20px

  &__bordered-table
    margin-bottom: 50px

    table
      border-collapse: collapse

      tr
        td
          padding-top: 15px
          border-top: 1px solid #C9C9C9
          vertical-align: top

        &:last-child
          td
            border-bottom: 1px solid #C9C9C9

  &__circle-img
    display: flex
    align-items: center

    @media (max-width: 767px)
      display: block

    & ^[0]
      &__img
        flex: 0 0 300px
        width: 300px
        max-width: 300px
        height: 300px
        margin-right: 40px

        @media (max-width: 413px)
          margin-right: 0
          flex: 0 0 250px
          width: 250px
          max-width: 250px
          height: 250px

        div
          border-radius: 50%
          height: 100%

  &__scheme
    display: flex
    align-items: center
    margin-bottom: 15px

    @media (max-width: 767px)
      display: block

    & ^[0]
      &__img
        max-width: 250px

        @media (min-width: 768px)
          flex: 0 0 490px
          width: 490px
          max-width: 490px

        @media (min-width: 1280px)
          margin-right: 25px

        @media (min-width: 1600px)
          margin-right: 155px

        div
          height: 100%
          background-color: transparent
          border-radius: 0

  &__scheme-mini
    margin-bottom: 30px

    & ^[0]
      &__img
        width: 33.333%
        padding-left: 60px
        margin-bottom: 60px

        @media (max-width: 767px)
          width: 100%

        div
          background-color: transparent
          height: 100%
          border-radius: 0

          img
            width: auto
            object-fit: contain

  &__scheme-mini-items
    display: flex
    flex-wrap: wrap
    margin-left: -60px

  &__tree-types
    padding-top: 40px

  &__tree-types-items
    display: flex
    flex-wrap: wrap
    margin-left: -20px

    & ^[0]
      &__img
        width: 25%
        display: flex
        flex-direction: column
        padding-left: 20px

        @media (max-width: 1279px)
          width: 50%

        @media (max-width: 767px)
          width: 100%

        strong
          flex: 1 1 auto

        div
          height: 185px