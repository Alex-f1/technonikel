.error-404
  background: radial-gradient(106.34% 106.34% at 18.2% 39.72%, #FFFFFF 0%, #A89171 47.67%, #6B563F 100%)
  height: 100vh

  @media (max-width: 1279px)
    height: 100%

  @media (max-width: 639px)
    background: radial-gradient(106.34% 56.34% at 18.2% 39.72%, #fff 0%, #a89171 47.67%, #6b563f 100%)

  &__section
    display: flex
    align-items: center
    padding-top: 172px

    @media (max-width: 1439px)
      padding-top: 40px

    @media (max-width: 639px)
      flex-direction: column
      justify-content: center
      align-items: center

  &__img
    margin-right: 86px

    @media (max-width: 1439px)
      margin-right: 0

    @media (max-width: 639px)
      margin-bottom: 15px

  &__content
    width: 504px

    @media (max-width: 639px)
      width: 100%
      text-align: center
      padding-bottom: 25px

    p
      font-weight: 300
      font-size: 20px
      line-height: 26px
      color: #D9C1A1

      a
        color: #fff
        text-decoration: none
        border-bottom: 1px solid #fff
        transition: border-bottom-color 0.3s

        &:hover
          border-bottom-color: transparent

  &__title
    font-size: 60px
    color: #D9C1A1
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 40px

    @media (max-width: 1279px)
      font-size: 40px

    @media (max-width: 959px)
      font-size: 30px