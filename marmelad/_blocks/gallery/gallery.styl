.gallery
  padding-top: 88px
  padding-bottom: 44px
  overflow: hidden

  @media (min-width: 768px)
    padding-top: 84px
    padding-bottom: 44px

  @media (min-width: 1280px)
    padding-top: 174px
    padding-bottom: 85px

  &__title
    font-size: 36px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 60px

    @media (min-width: 768px)
      font-size: 50px
      margin-bottom: 100px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 136px

  &__container
    &--desktop
      @media (max-width: 767px)
        display: none

      & ^[0]
        &__items
          display: flex
          flex-wrap: wrap
          margin-left: -32px

        &__item
          width: 100%
          padding-left: 32px
          margin-bottom: 32px
          height: 505px

          @media (min-width: 1280px) and (max-height: 768px)
            height: 480px

          @media (min-width: 768px)
            width: 50%

          @media (min-width: 1280px)
            width: 33.333%
            height: 600px

          @media (min-width: 1440px)
            width: 25%

          &:nth-child(even)
            @media (min-width: 768px) and (max-width: 1279px)
              margin-top: -85px

          &:nth-child(3n+2)
            @media (min-width: 1280px) and (max-width: 1439px)
              margin-top: -100px

          &:nth-child(even)
            @media (min-width: 1440px)
              margin-top: -100px

    &--mobile
      padding-bottom: 20px
      margin-right: -20px
      margin-left: -20px

      @media (min-width: 768px)
        display: none

      & ^[0]
        &__img
          height: 300px
          border-radius: 0

          @media (min-width: 375px)
            height: 505px

          // @media (min-width: 480px) and (max-width: 767px)
          //   height: 400px

      .swiper-pagination
        display: flex
        align-items: center
        bottom: 0
        padding-right: 20px
        padding-left: 20px

        @media (min-width: 768px)
          display: none

        .swiper-pagination-bullet
          flex: 1 1 auto
          opacity: 1
          border-radius: 0
          height: 10px
          margin-right: 5px
          margin-left: 5px
          display: flex
          align-items: center
          justify-content: center
          background-color: transparent

          &:before
            content: ''
            height: 2px
            width: 100%
            background-color: #E2E2E2
            transition: background-color 0.3s

          &.swiper-pagination-bullet-active
            &:before
              background-color: #4fa600

