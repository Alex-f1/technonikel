.gallery
  padding-top: 88px
  padding-bottom: 44px
  overflow: hidden

  @media (min-width: 768px)
    padding-top: 84px
    padding-bottom: 44px

  @media (min-width: 1280px)
    padding-top: 174px
    padding-bottom: 85px

  &__title
    font-size: 36px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 60px

    @media (min-width: 768px)
      font-size: 50px
      margin-bottom: 66px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 136px

  &__container
    &--desktop
      @media (max-width: 767px)
        display: none

    &--mobile
      padding-bottom: 20px

      @media (min-width: 768px)
        display: none

      & ^[0]
        &__img
          height: 240px

          @media (min-width: 480px) and (max-width: 767px)
            height: 400px

      .swiper-pagination
        display: flex
        align-items: center
        bottom: 0

        @media (min-width: 768px)
          display: none

        .swiper-pagination-bullet
          flex: 1 1 auto
          opacity: 1
          border-radius: 0
          height: 10px
          margin-right: 5px
          margin-left: 5px
          display: flex
          align-items: center
          justify-content: center
          background-color: transparent

          &:before
            content: ''
            height: 2px
            width: 100%
            background-color: #E2E2E2
            transition: background-color 0.3s

          &.swiper-pagination-bullet-active
            &:before
              background-color: #4fa600

    @media (max-width: 1599px) and (min-width: 768px)
      width: 768px
      margin-left: auto
      margin-right: auto

    @media (min-width: 1600px)
      width: 1920px
      max-width: none
      margin-right: -240px
      padding-left: 100px

