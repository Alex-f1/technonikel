  &__item
    &.grid-item
      margin-bottom: 25px

    @media (min-width: 768px)
      width: 320px
      height: 320px
      margin-right: 25px
      margin-bottom: 25px

    @media (min-width: 1600px)
      width: 650px
      height: 650px
      margin-right: 100px
      margin-bottom: 40px

    &--horizontal
      @media (min-width: 768px)
        width: 475px

      @media (min-width: 1600px)
        width: 909px

      &:nth-child(3)
        @media (min-width: 768px)
          margin-left: -160px

        @media (min-width: 1600px)
          margin-left: -260px

        & ^[0]
          &__img
            @media (width: 1920px)
              border-radius: 0 30px 30px 0

      &:nth-child(6)
        @media (min-width: 768px)
          margin-right: -160px

        @media (min-width: 1600px)
          margin-right: -240px

        & ^[0]
          &__img
            @media (width: 1920px)
              border-radius: 30px 0 0 30px

    &--vertical
      @media (min-width: 768px)
        height: 500px

      @media (min-width: 1600px)
        height: 1008px

    &--full
      // @media (min-width: 768px)
      // width: calc(100% - 160px)
      @media (min-width: 768px)
        width: calc(100% - 100px)

      @media (min-width: 1600px)
        width: calc(100% - 260px)
        margin-right: 0

  &__img
    background-color: #F1F1F1
    border-radius: 30px
    overflow: hidden
    cursor: pointer

    @media (min-width: 768px)
      width: 100%
      height: 100%

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover