.info-links
  &__section
    padding-top: 50px
    padding-bottom: 50px
    background-position: 50% 50%
    background-size: cover
    background-repeat: no-repeat
    position: relative

    @media (min-width: 768px)
      padding-top: 60px
      padding-bottom: 5px
      background-attachment: fixed

    @media (min-width: 1280px)
      padding-top: 150px
      padding-bottom: 150px

  &__inner
    max-width: 240px
    width: 100%
    margin: 0 auto

    @media (min-width: 768px)
      max-width: 610px

    @media (min-width: 1280px)
      max-width: 1200px

  &__items
    display: flex
    align-items: center
    flex-wrap: wrap

    @media (min-width: 768px)
      margin-left: -50px

    @media (min-width: 1280px)
      flex-wrap: nowrap
      margin-left: -28px

  &__item
    width: 100%
    margin-bottom: 20px

    @media (min-width: 768px)
      width: 50%
      padding-left: 50px
      margin-bottom: 60px

    @media (min-width: 1280px)
      width: 25%
      padding-left: 28px

  &__link
    text-decoration: none
    background-color: #FFF
    border-radius: 30px
    width: 100%
    height: 280px
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

    &:hover
      & ^[0]
        &__name
          color: #4fa600

  &__icon
    height: 160px
    display: flex
    align-items: center
    justify-content: center

    img
      vertical-align: top

  &__name
    font-size: 16px
    color: #000
    font-weight: 700
    line-height: 1.2
    text-align: center
    text-transform: uppercase
    max-width: 180px
    transition: color 0.3s