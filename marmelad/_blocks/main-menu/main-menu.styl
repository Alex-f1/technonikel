.main-menu
  position: fixed
  top: 0
  right: -360px
  // left: 50%
  // max-width: 1920px
  width: 100%
  height: 100vh
  z-index: 51
  // background-color: rgba(239, 250, 230, 0.8)
  // backdrop-filter: blur(5px)
  // transform: translateX(-360px)
  opacity: 0
  visibility: hidden
  transition: opacity 0.5s, transform 0.5s, ease 0.5s

  @media (max-width: 767px)
    display: none

  &._is-show-main-menu
    // transform: translateX(-50%)
    right: 0
    opacity: 1
    visibility: visible

  &__section
    height: 100%
    background-color: #fff

  &__inner
    height: 100%
    display: flex
    padding-left: 50px
    padding-right: 50px
    padding-top: 50px
    overflow-y: auto

    @media (min-width: 1600px)
      padding-left: 150px
      padding-right: 150px
      padding-top: 100px

  &__left
    height: 100%
    flex: 1 1 auto
    background-color: #fff
    opacity: 0
    visibility: hidden
    transform: translateX(-50px)
    transition: transform 0.8s, opacity 0.8s, ease 0.8s
    position: relative

    // overflow-y: auto
    // padding-top: 50px

    // padding-left: 50px
    // @media (min-width: 1600px)
    // padding-left: 150px
    // padding-top: 76px
    & ^[0]
      &__nav
        position: relative

    &._is-show-menu-catalog
      opacity: 1
      visibility: visible
      transform: translateX(0)

  &__right
    flex: 0 0 360px
    height: 100%
    // border-left: 1px solid #CACACA
    background-color: #fff
    padding-top: 35px

  &__links
    display: flex
    flex-direction: column
    padding-top: 100px
    padding-bottom: 20px

    @media (min-width: 1600px)
      padding-top: 130px

    @media (max-height: 959px)
      padding-top: 0

  &__link
    font-size: 22px
    font-weight: 300
    color: #000
    line-height: 1.3
    letter-spacing: 0.8px
    text-decoration: none
    padding: 22px 40px
    display: flex
    align-items: center
    border-bottom: 1px solid #E2E2E2
    transition: background-color 0.3s, border-bottom-color 0.3s
    position: relative

    &--catalog
      &:before
        content: ''
        width: 11px
        height: 18px
        background-image: url("data:image/svg+xml,%3Csvg width='11' height='18' viewBox='0 0 11 18' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M10 17L2 9L10 1' stroke='black' stroke-width='2'/%3E%3C/svg%3E%0A")
        position: absolute
        top: 50%
        left: 15px
        transform: translateY(-50%)
        transition: transform 0.3s

      &._is-active
        border-bottom-color: transparent
        background-color: #EFFAE6

        &:before
          transform: rotate(180deg) translateY(50%)

    &:hover
      border-bottom-color: transparent
      background-color: #EFFAE6

  &__icon-link
    flex: 0 0 56px
    width: 56px
    max-width: 56px
    margin-right: 32px

    img
      vertical-align: top

  &__buttons
    padding: 20px 40px

    @media (min-width: 1600px)
      padding: 40px

    &--catalog
      width: 276px
      padding: 50px 0 50px 0

      @media (min-width: 960px)
        padding: 50px 0 50px 0

      @media (min-width: 1600px)
        padding: 0 100px 0 0
        width: auto
        margin-left: auto
        position: absolute
        bottom: 48px
        right: 0

      & ^[0]
        &__button
          flex: none
          width: auto
          max-width: none
          min-width: 276px
          justify-content: center

  &__button
    font-size: 12px !important
    margin-bottom: 30px
    padding: 13px 22px !important
    justify-content: flex-start

    &:last-child
      margin-bottom: 0

    i
      flex: 0 0 44px
      width: 44px
      max-width: 44px
      height: 34px
      display: flex
      justify-content: center
      align-items: center
      margin-right: 17px

      svg
        margin-right: 0

  &__nav
    padding-bottom: 30px

    ul
      list-style: none
      padding-left: 0
      margin: 0

      li
        a
          color: #000
          letter-spacing: 0.8px
          line-height: 1.2
          text-decoration: none
          transition: color 0.3s

          &:hover
            color: #4FA600

    > ul
      display: flex
      flex-wrap: wrap

      > li
        width: 100%
        margin-top: 30px
        padding-right: 35px

        @media (min-width: 960px)
          width: 50%

        @media (min-width: 1024px)
          width: 33.333%

        @media (min-width: 1600px)
          width: 33.333%
          margin-top: 65px

        @media (max-height: 959px)
          margin-top: 50px

        > a, .main-menu-title
          font-size: 20px
          font-weight: 700
          text-transform: uppercase
          text-decoration: none
          display: flex
          flex-direction: column

          i
            margin-bottom: 20px
            width: 92px

            @media (min-width: 960px)
              width: auto
              height: 78px

            @media (min-width: 1600px)
              height: 87px

            @media (max-height: 959px)
              width: 78px
              height: 78px

            img
              vertical-align: top

        ul
          padding-top: 30px

          @media (max-height: 959px)
            padding-top: 15px

          li
            margin-bottom: 15px

            @media (max-height: 959px)
              margin-bottom: 5px

            &:last-child
              margin-bottom: 0

            a
              font-size: 18px
              font-weight: 300

  &__links-nav
    display: flex
    flex-wrap: wrap

  &__link-nav
    font-size: 12px
    color: #000
    font-weight: 700
    line-height: 1
    text-align: center
    letter-spacing: 0.8px
    text-transform: uppercase
    text-decoration: none
    flex: 0 0 150px
    width: 150px
    max-width: 150px
    height: 150px
    display: flex
    flex-direction: column
    justify-content: center
    border-radius: 20px
    transition: color 0.3s, background-color 0.3s
    margin-bottom: 65px
    margin-right: 30px

    &:hover
      color: #fff
      background-color: #4FA600

      i
        svg
          path
            stroke: #fff

    i
      height: 60px
      margin-bottom: 15px

      svg
        path
          transition: stroke 0.3s

  &__banner
    background-color: #90D300
    border-radius: 30px
    overflow: hidden
    margin-top: -25px