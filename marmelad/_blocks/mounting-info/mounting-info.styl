.mounting-info
  padding-top: 30px
  padding-bottom: 40px

  @media (min-width: 768px)
    padding-top: 40px
    padding-bottom: 80px

  @media (min-width: 1280px)
    padding-top: 60px
    padding-bottom: 140px

  &__title
    font-size: 30px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 50px

    @media (min-width: 375px)
      font-size: 36px

    @media (min-width: 768px)
      font-size: 70px
      margin-bottom: 60px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 128px

  &__item
    margin-bottom: 80px

    &:last-child
      margin-bottom: 0

    &:nth-child(even)
      & ^[0]
        &__img
          @media (min-width: 1025px)
            order: 1
            border-radius: 30px 0px 0px 30px
            margin-right: -50px
            margin-left: 25px

          @media (min-width: 1280px)
            margin-left: 45px

          @media (min-width: 1600px)
            margin-right: -150px
            margin-left: 110px

  &__body
    display: flex
    flex-direction: column

    @media (min-width: 1024px)
      flex-direction: row

    @media (min-width: 1440px)
      align-items: center

  &__img
    background-color: #F1F1F1
    overflow: hidden
    border-radius: 10px
    order: 1

    @media (max-width: 639px)
      height: 260px

    @media (max-width: 1023px)
      margin-top: 30px
      height: 400px

    @media (min-width: 1024px)
      flex: 0 0 500px
      width: 500px
      max-width: 500px
      height: 600px
      margin-right: 25px
      border-radius: 0px 30px 30px 0px
      margin-left: -50px
      order: -1

    @media (min-width: 1280px)
      flex: 0 0 640px
      width: 640px
      max-width: 640px
      height: 700px
      margin-right: 45px

    @media (min-width: 1600px)
      flex: 0 0 960px
      width: 960px
      max-width: 960px
      height: 920px
      margin-right: 90px
      margin-left: -150px

    @media (min-width: 1921px)
      border-radius: 30px

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top

  &__text
    margin-bottom: 50px

    @media (min-width: 1600px)
      margin-bottom: 90px
      max-width: 600px

    &:last-child
      margin-bottom: 0

    h3
      font-size: 30px
      line-height: 1.2
      letter-spacing: 0.8px
      margin-top: 0
      margin-bottom: 22px
      text-transform: uppercase

      @media (max-width: 767px)
        font-size: 24px

      @media (max-width: 1279px)
        font-size: 26px

    p
      font-size: 16px
      color: #000
      font-weight: 300
      line-height: 1.5
      letter-spacing: 0.8px
      margin-top: 0
      margin-bottom: 30px

      @media (max-width: 767px)
        margin-bottom: 15px

      &:last-child
        margin-bottom: 0

    a
      color: #4fa600
      text-decoration: none

      &:hover
        text-decoration: underline