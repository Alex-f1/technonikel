.other-products
  padding-top: 40px
  padding-bottom: 20px

  @media (min-width: 768px)
    padding-top: 80px
    padding-bottom: 50px

  @media (min-width: 1280px)
    padding-top: 30px
    padding-bottom: 0

  &__inner
    position: relative

    .swiper-button-prev, .swiper-button-next
      width: 155px
      height: 55px
      margin-top: -60px
      transition: opacity 0.3s
      overflow: hidden

      @media (max-width: 959px)
        display: none

      &:after
        content: ''
        width: 152px
        height: 55px
        transform: translateX(-40px)
        background-image: url("data:image/svg+xml,%3Csvg width='152' height='55' viewBox='0 0 152 55' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 27.5H150M150 27.5L123.664 1M150 27.5L123.664 54' stroke='%234FA600' stroke-width='2'/%3E%3C/svg%3E%0A")
        transition: transform 0.3s

      &.swiper-button-disabled
        opacity: 0
        visibility: hidden

      &:hover
        &:after
          transform: translateX(0)

    .swiper-button-prev
      transform: rotate(180deg)
      left: -30px

      @media (max-width: 1800px)
        left: 0

    .swiper-button-next
      right: -30px

      @media (max-width: 1800px)
        right: 0

  &__title
    font-size: 24px
    color: #000
    font-weight: 700
    line-height: 1
    letter-spacing: 0.8px
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 767px)
      font-size: 20px

  &__container
    padding-top: 50px
    padding-bottom: 85px

    @media (max-width: 959px)
      padding-bottom: 40px

    @media (min-width: 1440px)
      padding-right: 35px
      padding-left: 35px
      margin-left: -35px
      margin-right: -35px

    .swiper-pagination
      display: flex
      align-items: center

      @media (min-width: 960px)
        display: none

      .swiper-pagination-bullet
        flex: 1 1 auto
        opacity: 1
        border-radius: 0
        height: 10px
        margin-right: 5px
        margin-left: 5px
        display: flex
        align-items: center
        justify-content: center
        background-color: transparent

        &:before
          content: ''
          height: 2px
          width: 100%
          background-color: #E2E2E2
          transition: background-color 0.3s

        &.swiper-pagination-bullet-active
          &:before
            background-color: #4fa600

  &__item
    .product-thumb
      &__body
        @media (max-width: 1023px)
          height: 400px
