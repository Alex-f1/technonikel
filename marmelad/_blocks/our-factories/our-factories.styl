  &__info
    font-size: 36px
    color: #4FA600
    font-weight: 700
    position: absolute

    @media (max-width: 1439px)
      left: 0
      bottom: 110px

    @media (max-width: 479px)
      bottom: 200px

    @media (min-width: 768px)
      font-size: 50px

    @media (min-width: 1440px)
      font-size: 60px
      bottom: 20px
      left: 210px

    strong
      line-height: 0.5
      display: block

    sup
      font-size: 24px
      line-height: 1
      display: inline-block
      vertical-align: top
      padding-top: 5px
      padding-left: 10px
      margin-bottom: 5px

    span
      font-size: 14px
      display: block
      margin-bottom: 10px

      @media (min-width: 768px)
        font-size: 24px

    small
      font-size: 16px
      color: #000
      font-weight: 300
      line-height: 1.2
      display: block

  &__cards
    display: none

    @media (max-width: 767px)
      margin-right: -25px
      margin-left: -25px

    @media (max-width: 1279px)
      margin-right: -50px
      margin-left: -50px

    @media (min-width: 1440px)
      position: absolute
      top: 0
      right: 25px
      z-index: 5

    @media (min-width: 1600px)
      right: -50px

    &._is-show
      display: block

.our-factories-card
  background-color: #FFF

  @media (min-width: 1440px)
    max-width: 700px
    width: 100%
    border-radius: 30px
    overflow: hidden
    box-shadow: 0px 4px 40px rgba(0, 0, 0, 0.15)

  @media (min-width: 1600px)
    max-width: 800px

  &__images
    .swiper-slide
      @media (max-width: 479px)
        height: 190px

      @media (min-width: 768px)
        height: 400px

      @media (min-width: 1440px)
        height: 520px

    .swiper-pagination
      display: flex
      justify-content: center
      align-items: center
      bottom: 10px
      max-width: 142px
      left: 50%
      transform: translate(-50%)

    .swiper-pagination-bullet
      flex: 1 1 auto
      opacity: 1
      border-radius: 0
      height: 10px
      margin-right: 5px
      margin-left: 5px
      display: flex
      align-items: center
      justify-content: center
      background-color: transparent

      &:before
        content: ''
        height: 2px
        width: 100%
        background-color: #E2E2E2
        transition: background-color 0.3s

      &.swiper-pagination-bullet-active
        &:before
          background-color: #4fa600

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover

  &__content
    color: #000
    padding: 10px 20px
    position: relative

    @media (min-width: 768px)
      padding: 26px 48px

    @media (min-width: 1440px)
      padding: 36px 94px 60px 64px

    p
      font-size: 18px
      font-weight: 300
      line-height: 1.2
      margin-top: 0
      margin-bottom: 0

      @media (min-width: 768px)
        font-size: 20px

  &__head
    margin-bottom: 30px

  &__name
    font-size: 30px
    font-weight: 700
    line-height: 1.2
    margin-top: 0
    margin-bottom: 10px

    @media (min-width: 768px)
      font-size: 40px

    @media (min-width: 1440px)
      font-size: 50px

  &__list
    list-style: none
    padding-left: 0
    margin-top: 0

    @media (min-width: 1440px)
      margin-bottom: 70px

    li
      font-size: 16px
      font-weight: 300
      line-height: 1.2
      padding-left: 30px
      position: relative
      margin-bottom: 20px

      @media (min-width: 768px)
        font-size: 18px

      @media (min-width: 1440px)
        margin-bottom: 25px

      &:before
        content: ''
        position: absolute
        top: 6px
        left: 0
        width: 8px
        height: 9px
        background-image: url("data:image/svg+xml,%3Csvg width='8' height='9' viewBox='0 0 8 9' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M7.86145 4.5596L0.307467 8.66182L0.307467 0.45737L7.86145 4.5596Z' fill='%234FA600'/%3E%3C/svg%3E%0A")
        background-repeat: no-repeat
        background-position: 0 0
        background-size: contain

  &__contacts
    display: flex
    flex-direction: column
    border-top: 1px solid #E2E2E2
    padding-top: 20px

    @media (min-width: 768px)
      padding-top: 35px

    @media (min-width: 1440px)
      padding-top: 50px

    a, span
      font-size: 16px
      color: #000
      font-weight: 300
      line-height: 1.1
      display: flex
      align-items: center
      margin-bottom: 20px

      @media (min-width: 1440px)
        font-size: 18px
        margin-bottom: 25px

      &:last-child
        margin-bottom: 0

      i
        flex: 0 0 14px
        width: 14px
        max-width: 14px
        height: 16px
        margin-right: 16px

    a
      text-decoration: none

  &__button-close
    position: absolute
    top: 50px
    right: 54px
    width: 37px
    height: 37px
    background-color: transparent
    border: none
    background-image: url("data:image/svg+xml,%3Csvg width='37' height='36' viewBox='0 0 37 36' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 0.822754L36 34.8228' stroke='black' stroke-width='2'/%3E%3Cpath d='M36 0.822754L1 34.8228' stroke='black' stroke-width='2'/%3E%3C/svg%3E%0A")
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain
    cursor: pointer
    transition: background 0.3s

    @media (max-width: 1439px)
      display: none

    &:hover
      background-image: url("data:image/svg+xml,%3Csvg width='37' height='36' viewBox='0 0 37 36' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 0.822754L36 34.8228' stroke='%234FA600' stroke-width='2'/%3E%3Cpath d='M36 0.822754L1 34.8228' stroke='%234FA600' stroke-width='2'/%3E%3C/svg%3E%0A")