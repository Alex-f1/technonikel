.our-factories
  padding-top: 120px
  padding-bottom: 85px
  overflow: hidden

  @media (min-width: 768px)
    padding-top: 150px
    padding-bottom: 95px

  @media (min-width: 1440px)
    padding-top: 164px
    padding-bottom: 200px

  &__inner
    position: relative

  &__head
    margin-bottom: 35px

    @media (min-width: 768px)
      margin-bottom: 45px

    @media (min-width: 1280px)
      margin-bottom: 55px

  &__title
    font-size: 36px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 8px

    @media (min-width: 768px)
      font-size: 50px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 10px

  &__desc
    font-size: 18px
    font-weight: 300
    line-height: 1.4
    margin-bottom: 32px
    max-width: 180px

    @media (min-width: 768px)
      font-size: 20px
      max-width: 100%

    @media (min-width: 1280px)
      font-size: 24px

  &__container
    position: relative
    display: flex
    flex-direction: column

  &__buttons-tab
    display: flex
    align-items: center
    position: relative
    z-index: 3

    @media (max-width: 1439px)
      order: 1
      margin-bottom: 40px

    @media (max-width: 479px)
      margin-bottom: 20px
      flex-direction: column

  &__button-tab
    margin-right: 10px

    &.button-default--outline
      color: #4FA600
      border-color: #E2E2E2

      @media (max-width: 1279px)
        flex: 1 1 auto
        min-width: auto

      @media (max-width: 479px)
        font-size: 16px
        flex: none
        width: 100%
        margin-right: 0
        margin-bottom: 10px

      @media (max-width: 767px)
        font-size: 12px

      @media (min-width: 768px)
        font-size: 16px

      &:hover
        color: #000
        background-color: #D4F0BA
        border-color: transparent

    &._is-active
      color: #000
      background-color: #D4F0BA
      border-color: transparent
      // pointer-events: none

  &__map
    position: relative
    z-index: 2

    @media (max-width: 1439px)
      transform: scale(0.45)
      margin-top: -380px
      margin-bottom: -120px
      margin-left: -290px

    @media (max-width: 479px)
      margin-top: -435px
      margin-bottom: -230px
      margin-left: -240px
      transform: scale(0.2)

    @media (min-width: 1440px)
      margin-top: -160px

  &__img
    width: 1620px

    img
      vertical-align: top

