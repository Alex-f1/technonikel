.our-products
  padding-top: 35px
  padding-bottom: 50px

  @media (min-width: 768px)
    padding-top: 32px
    padding-bottom: 50px

  @media (min-width: 1280px)
    padding-top: 55px
    padding-bottom: 100px

  &__info
    color: #000
    display: flex
    position: relative

  &__title
    font-size: 36px
    font-weight: 700
    line-height: 1
    text-transform: uppercase
    margin-top: 0
    margin-bottom: 22px

    @media (min-width: 768px)
      font-size: 50px
      margin-bottom: 18px

    @media (min-width: 1280px)
      font-size: 80px
      margin-bottom: 32px

  &__desc
    font-size: 20px
    font-weight: 300
    line-height: 1.5
    margin-bottom: 32px
    width: 100%

    @media (min-width: 768px)
      max-width: 336px

    @media (min-width: 1280px)
      max-width: 600px
      font-size: 36px

    @media (min-width: 1600px)
      max-width: 800px

  &__link-more
    min-width: 160px
    display: inline-block

    @media (min-width: 1280px)
      min-width: 280px

  &__img
    width: 100%
    display: none

    img
      vertical-align: top

    @media (min-width: 768px)
      flex: 0 0 287px
      width: 287px
      max-width: 287px
      display: block
      margin-left: 44px
      position: absolute
      top: 70px
      right: 0

    @media (min-width: 1280px)
      flex: 0 0 400px
      width: 400px
      max-width: 400px
      display: block
      margin-left: 44px
      top: 120px
      right: 0

    @media (min-width: 1600px)
      flex: 0 0 612px
      width: 612px
      max-width: 612px
      margin-left: 210px
      position: static