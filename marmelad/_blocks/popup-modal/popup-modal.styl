.popup-modal
  &__container
    padding: 90px 100px 100px 100px

    @media (max-width: 1023px)
      padding: 60px 25px 50px 25px

  &__title
    font-size: 40px
    color: #000
    font-weight: 700
    line-height: 1.2
    margin-bottom: 35px

    @media (max-width: 1023px)
      font-size: 30px
      margin-bottom: 25px

  &__input, &__textarea
    margin-bottom: 25px

    input, textarea
      width: 100%
      height: 45px
      border: none
      border-bottom: 1px solid #C9C9C9
      padding-bottom: 25px

      &:focus
        // outline: 1px solid #4FA600
        // border-radius: 10px
        outline: none

    ::placeholder
      font-weight: 500
      font-size: 14px
      line-height: 18px
      color: #000000

  &__textarea
    textarea
      max-width: 100%
      min-height: 70px

  &__privacy-policy
    display: flex
    flex-direction: column
    margin-bottom: 20px

  &__label
    font-size: 14px
    color: #000
    font-weight: 300
    line-height: 1.1
    margin-bottom: 26px
    position: relative

    @media (max-width: 479px)
      font-size: 12px

    input
      position: absolute
      top: 0
      left: 0
      opacity: 0
      visibility: hidden

      &:checked ~ .popup-modal__checkbox
        i
          background-color: #4fa600
          border-color: transparent

          &:before
            opacity: 1
            visibility: visible

  &__checkbox
    display: flex

    i
      flex: 0 0 40px
      width: 40px
      max-width: 40px
      height: 40px
      border: 1px solid #C9C9C9
      border-radius: 5px
      margin-right: 20px
      position: relative
      transition: background-color 0.3s

      @media (max-width: 1023px)
        flex: 0 0 20px
        width: 20px
        max-width: 20px
        height: 20px
        margin-right: 10px

      &:before
        content: ''
        position: absolute
        top: 45%
        left: 50%
        transform: translate(-50%, -50%) rotate(-45deg)
        width: 16px
        height: 10px
        opacity: 0
        visibility: hidden
        border-left: 2px solid #fff
        border-bottom: 2px solid #fff
        transition: opacity 0.3s

        @media (max-width: 1023px)
          width: 10px
          height: 6px

    a
      color: #4fa600
      text-decoration: none

      &:hover
        text-decoration: underline

  &__button-send
    &.button-default
      padding-top: 21px
      padding-bottom: 21px
      min-width: 280px

      @media (max-width: 639px)
        width: 100%
        min-width: auto

.hystmodal__wrap
  padding: 15px

.hystmodal__window
  width: 910px
  border-radius: 30px

  @media (max-width: 1023px)
    width: 640px
    border-radius: 20px

.hystmodal__close
  top: 32px
  right: 32px
  width: 37px
  height: 36px
  background-image: url("data:image/svg+xml,%3Csvg width='37' height='36' viewBox='0 0 37 36' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0.898438 1L35.8984 35' stroke='%234FA600' stroke-width='2'/%3E%3Cpath d='M35.8984 1L0.898437 35' stroke='%234FA600' stroke-width='2'/%3E%3C/svg%3E%0A")
  background-repeat: no-repeat
  background-position: 0 0
  background-size: contain
  outline: none !important

  @media (max-width: 1023px)
    top: 15px
    right: 15px
    width: 30px
    height: 30px