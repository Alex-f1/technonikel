.questions-answers
  padding-bottom: 100px

  @media (min-width: 768px)
    padding-bottom: 160px

  @media (min-width: 1280px)
    padding-bottom: 260px

  &__item
    &:last-child
      & ^[0]
        &__name
          border-bottom: 1px solid #E2E2E2

  &__name
    font-size: 18px
    color: #000
    font-weight: 700
    line-height: 1.2
    padding: 16px 80px 16px 0
    border-top: 1px solid #E2E2E2
    position: relative
    transition: color 0.3s
    cursor: pointer

    @media (min-width: 768px)
      font-size: 20px

    @media (min-width: 1280px)
      font-size: 24px
      padding: 28px 100px 28px 0

    &:hover
      color: #4fa600

    &._is-active
      border-bottom-color: transparent !important

      &:after
        transform: rotate(180deg)

    &:after
      content: ''
      position: absolute
      top: 22px
      right: 16px
      width: 24px
      height: 14px
      background-image: url("data:image/svg+xml,%3Csvg width='44' height='24' viewBox='0 0 44 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1.5L22 22.5L43 1.50001' stroke='%234FA600' stroke-width='2'/%3E%3C/svg%3E")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: transform 0.3s

      @media (min-width: 1280px)
        width: 44px
        height: 24px
        top: 30px
        right: 30px

  &__content
    display: none

    // height: 0
    // opacity: 0

    // transition: opacity 0.3s, height 0.3s
    &._is-show
      display: block
      // height: auto
      // opacity: 1

  &__text
    padding: 10px 0 20px

    @media (min-width: 768px)
      padding-top: 20px
      padding-bottom: 56px

    @media (min-width: 1280px)
      padding-left: 100px
      padding-right: 50px
      padding-bottom: 56px

    p
      font-size: 16px
      color: #000
      font-weight: 300
      line-height: 1.5
      letter-spacing: 0.8px
      margin-top: 0
      margin-bottom: 0

      @media (min-width: 768px)
        font-size: 18px