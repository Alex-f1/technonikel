.sorting
  &__text
    @media (min-width: 768px)
      margin-left: auto
      max-width: 310px
      margin-top: -60px

    @media (min-width: 1280px)
      max-width: 700px
      margin-bottom: 60px
      padding-right: 150px

    @media (min-width: 1440px)
      max-width: 740px
      padding-right: 205px

    p
      font-size: 18px
      color: #000
      font-weight: 300
      line-height: 1.1
      margin-top: 0
      margin-bottom: 25px

      @media (min-width: 768px)
        font-size: 20px

      @media (min-width: 1280px)
        font-size: 40px

  &__container
    display: flex
    flex-direction: column

    @media (min-width: 1280px)
      flex-direction: row
      justify-content: space-between

  &__sort-type
    position: relative

    @media (max-width: 1279px)
      margin-bottom: 20px

    @media (max-width: 767px)
      display: none
      margin-bottom: 0

    @media (min-width: 1280px)
      display: block
      width: 550px
      margin-right: 10px

    &._is-show
      @media (max-width: 767px)
        display: block
        margin-bottom: 30px

    & ^[0]
      &__labels
        @media (max-width: 639px)
          flex-direction: column
          align-items: flex-start

      &__label
        width: 33.333%

        @media (max-width: 639px)
          flex: none
          width: 100%
          max-width: 100%
          margin-bottom: 18px
          margin-right: 0

        &:last-child
          margin-bottom: 0

      &__choice
        @media (max-width: 639px)
          height: 60px
          align-items: center
          justify-content: center
          flex-direction: row

      &__img
        @media (max-width: 639px)
          flex: 0 0 72px
          width: 72px
          max-width: 72px
          order: -1
          margin-right: 35px
          transform: translateY(-6px)

        @media (max-width: 767px)
          width: 65px

        @media (min-width: 768px)
          width: 75px

        @media (min-width: 1280px)
          width: 107px

      &__name
        @media (max-width: 639px)
          flex: none
          margin-bottom: 0

  &__sort-view
    position: relative

    @media (max-width: 767px)
      display: none

    @media (min-width: 1280px)
      display: block
      width: 740px
      margin-left: 10px

    &._is-show
      @media (max-width: 767px)
        display: block
        margin-bottom: 30px

    & ^[0]
      &__labels
        flex-wrap: wrap
        margin-left: -10px

        @media (min-width: 768px)
          flex-wrap: nowrap
          margin-left: 0

      &__label
        width: 50%
        margin-right: 0
        padding-left: 10px
        margin-bottom: 10px

        @media (min-width: 768px)
          width: 25%
          padding-left: 0
          margin-right: 20px
          margin-bottom: 0

      &__img
        width: 55px

        @media (min-width: 768px)
          height: 65px

        @media (min-width: 1280px)
          height: 95px

  &__title
    font-size: 14px
    color: #000
    font-weight: 300
    line-height: 18px
    letter-spacing: 0.8px
    margin-bottom: 16px
    display: block

    @media (max-width: 1279px)
      display: none

    &--tablet
      @media (max-width: 767px)
        display: none

      @media (max-width: 1279px)
        width: 115px
        height: 100%
        display: block
        position: absolute
        top: 0
        left: -18px
        transform: rotate(-90deg)
        text-align: center

      @media (min-width: 1280px)
        display: none

  &__labels
    display: flex
    align-items: center

  &__label
    position: relative
    margin-right: 20px

    &:last-child
      margin-right: 0 !important

    input
      position: absolute
      top: 0
      left: 0
      opacity: 0

      &:checked ~ .sorting__choice
        background-color: #D4F0BA
        border-color: transparent

  &__choice
    text-align: center
    height: 135px
    display: flex
    flex-direction: column
    align-items: center
    border: 1px solid #E2E2E2
    border-radius: 10px
    transition: background-color 0.3s, border-color 0.3s
    padding: 17px
    cursor: pointer

    @media (min-width: 768px)
      height: 150px

    @media (min-width: 1280px)
      height: 180px

  &__name
    font-size: 14px
    color: #000
    font-weight: 300
    line-height: 1
    letter-spacing: 0.8px
    transition: color 0.3s
    margin-bottom: 18px
    width: 107px
    flex: 1 1 auto

  &__img
    img
      vertical-align: top

  &__toggle-buttons
    display: flex
    align-items: center
    margin-bottom: 20px

    @media (min-width: 768px)
      display: none

  &__button-toggle
    font-size: 13px
    color: #4FA600
    font-weight: 700
    line-height: 1.1
    text-align: center
    background-color: transparent
    border: 1px solid #E2E2E2
    border-radius: 10px
    padding: 10px 10px
    width: 50%
    margin-right: 8px

    &:last-child
      margin-right: 0

    &._is-active
      color: #000
      background-color: #D4F0BA