$system-font = unquote('"IBM Plex Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"')

$colors = {
  theme: #4FA600,
  accent: #D4F0BA,
}

$fonts = {
  base: $system-font,
  headings: $system-font
}

$body = {
  fontFamily: $fonts.base,
  fontSize: 1rem,
  fontWeight: 300,
  lineHeight: 1.5,
  color: #000,
  bgc: #fff
}

$selection = {
  bgc: $colors.theme,
  color: #fff
}

$selectionHeadings = {
  bgc: $colors.accent,
  color: #000
}

$placeholders = {
  normal : getColor($body.color, 'hint'),
  focus  : transparent
}
